class Next_redo_break
  
  a={7,5,8,9,4,2,1,3,0,6}
  
  for i in 0..10
    loop{
      print "0~9の整数を入力："
      b=gets.to_i
      if b>=0 && b<=9
        break
      end
    }
    if b!=a[i]
      next
    end
    prinf("a[%d]=%d\n",i,b)
    print "続けますか t/f:"
    tf=gets.chomp
    if tf=="t"
      redo
    else
      break
    end
    
  end
end