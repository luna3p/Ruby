class Casemathod
  #caseメソッドは比較対象が1つでその条件が複数ある場合に使われる。
  s="整数を入力してください:"
  print s,"a="
  a=gets.to_i
  
  print s,"b="
  b=gets.to_i
  case a
  when a==b
    print "a=b=",a
  when a<b
    puts "a<b"
    print "a=",a
    print ":b=",b
  when a>b
  puts "a>b"
      print "a=",a
      print ":b=",b
  end
end