class HelloWorld
  def initialize(myname="Ryby")
    @name=myname
  end

  def hello
    print "Hello, World. I am ", @name, ".\n"
  end
  
  def name
    return @name
  end
  
  def name=(value)
    @name = value
  end
end

bob = HelloWorld.new("Bob")
alice = HelloWorld.new("Alice")
ruby = HelloWorld.new

p bob.name
p alice.name
p ruby.name

bob.neme= "Robert"

bob.hello
alice.hello
ruby.hello
