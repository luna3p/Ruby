class Next_redo_break
  a=[2,5,8,6,4,0,3,9,1,7]
  b=0,c=0,d=0
  loop{
    print d,"0~9の数を入力いてください："
    b=gets.to_i
    d+=1
    unless b>=0 && b<=9
      redo  #処理をもう一度
    else
      break
    end
    
  }
  a.each do |i| 
    
    unless b==i
      c+=1 
      next
    end
    print "a[",c,"]=",b
  end
end
